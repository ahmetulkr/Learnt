<!DOCTYPE html>
<html>
<head>
    <title>Learnt.</title>
    <link rel="icon" type="image/png" href="~/Resource/logo3.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="~/css/mysite.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body>
    <header class="mb-auto">
        <nav class="navbar navbar-expand-lg navbar-dark bg-black">
            <div class="container justify-content-center">
                <!-- Logo ve Başlık -->
                <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Home", "Home")">
                    <img src="/Resource/logo2.png" alt="Logo" class="me-2" style="height: 40px;" />
                </a>

                <!-- Menü -->
                <div class="navbar-collapse collapse dd-flex justify-content-between">
                    <ul class="navbar-nav d-flex">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="@Url.Action("Home", "Home")">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="lessonDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Lesson
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="lessonDropdown" >
                                <li><a class="dropdown-item" href="@Url.Action("Html", "Lessons")">Python</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Css", "Lessons")">CSS</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Javascript", "Lessons")">JavaScript</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("About", "Home")">About</a>
                        </li>
                         
                    </ul>
                </div>

                <!-- Giriş Kontrolü -->
                <div class="d-flex align-items-center">
                    @if (Context.Session.GetInt32("UserId") != null)
                    {   
                        <a class="btn btn-light text-dark rounded-pill px-3 btn-margins" href="@Url.Action("Profile", "Account")">Profile</a>
                        @if (Context.Session.GetString("Role") == "admin")
                        {
                            <a class="btn btn-light text-dark rounded-pill px-3 btn-margins" href="@Url.Action("AdminPage", "Admin")">Dasboard</a>
                        }
                    }
                    else
                    {
                        <a class="btn btn-outline-dark text-white rounded-pill px-3 btn-margins" href="@Url.Action("Login", "Account")" style="border-width: 1px;">Log In</a>
                        <a class="btn btn-light text-dark rounded-pill px-3" href="@Url.Action("Register", "Account")">Sign Up</a>
                    }
                </div>
                </div>
            </div>
        </nav>
    </header>

    <div>
        @RenderBody()
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
