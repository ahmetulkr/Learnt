@model LearntMVCProject.Models.UserProfile

<div class="profile-container">
    <div class="profile-header">
        <img src="@(Model?.ProfilePictureUrl ?? "/images/default-avatar.png")" 
             alt="Profil Resmi" 
             class="profile-picture" />
        <h1>@(Model?.FullName ?? "Bilinmeyen Kullanıcı")</h1>
    </div>

    <div class="profile-bio">
        <h3>Biyografi</h3>
        <p>@(Model?.Bio ?? "Henüz biyografi eklenmedi.")</p>
    </div>

    <div class="profile-actions">
        <a href="/Account/EditProfile" class="btn btn-primary">Profili Düzenle</a>
        <a href="/Account/Logout" class="btn btn-danger">Çıkış Yap</a>
    </div>
</div>
