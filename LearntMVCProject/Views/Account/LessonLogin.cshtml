@model LearntMVCProject.Models.AppUser
@{
    ViewBag.Title = "Lesson Login";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background: #000000; /* Siyah arka plan */
    }

    main {
        position: relative;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #000000;
        background-image: 
            linear-gradient(to right, rgba(255, 255, 255, 0.1) 1px, transparent 1px),
            linear-gradient(to bottom, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
        background-size: 40px 40px;
    }

    .login-form {
        position: relative;
        background: rgba(0, 0, 0, 0.9); /* Yarı şeffaf form arka planı */
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        max-width: 400px;
        width: 100%;
        z-index: 1;
    }

    .login-form h2 {
        color: #fff;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .login-form label {
        color: #ddd;
    }

    .login-form .form-control {
        background: #ffffff;
        color: #000000;
        border: 1px solid #fff;
        padding: 0.5rem;
        border-radius: 4px;
    }

    .login-form .form-control:focus {
        background: #ffffff;
        border-color: #fff;
    }

    .login-form .btn-primary {
        background-color: #28a745;
        border-color: #28a745;
        width: 100%;
        padding: 0.8rem;
        border-radius: 4px;
        transition: background-color 0.3s, border-color 0.3s;
    }

    .login-form .btn-primary:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }

    .login-form .text-danger {
        color: #f44336;
        text-align: center;
        margin-top: 1rem;
    }

    .login-form .text-center a {
        color: #007be3;
        text-decoration: none;
    }

    .login-form .text-center a:hover {
        text-decoration: underline;
    }
</style>

<main>
    <form method="post" action="/Account/LessonLogin" class="login-form">
        
<img class="d-block mx-auto mb-4" src="/Resource/logo2.png" alt="Logo" height="75">
<h3 style="color: white;font-size: 19px;">Log in or sign up to watch the lessons.</h3>
        <div class="form-group mb-3">
            <label for="Username" class="form-label">Username</label>
            <input type="text" name="Username" class="form-control" placeholder="Enter your username" required />
        </div>

        <div class="form-group mb-3">
            <label for="Password" class="form-label">Password</label>
            <input type="password" name="Password" class="form-control" placeholder="Enter your password" required />
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <button type="submit" class="btn btn-outline-dark text-white rounded-pill px-3 btn-margins" style="margin-top: 59px;border-width: 1px;width: 327px;">Log In</button>

        <div class="text-center mt-3">
            <a href="/Account/Register">Don't have an account? Register</a>
        </div>
    </form>
</main>
