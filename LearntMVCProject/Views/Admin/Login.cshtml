@model LearntMVCProject.Models.Admin
@{
    ViewBag.Title = "Login";
}
<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background: #000000; /* Black background */
    }

    main {
        position: relative;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #000000; /* Black background */
        background-image: linear-gradient(to right, rgba(255, 255, 255, 0.1) 1px, transparent 1px), linear-gradient(to bottom, rgba(255, 255, 255, 0.1) 1px, transparent 1px); /* Grid pattern */
        background-size: 40px 40px; /* Grid size */
    }

    form {
        position: relative;
        background: #000000; /* Dark gray form background */
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        z-index: 1; /* Ensure form is on top */
    }

    h2 {
        color: #fff;
    }

    label {
        color: #ddd;
    }

    .form-control {
        background: #ffffff;
        color: #000000;
        border: 1px solid #ffffff;
    }

    .form-control:focus {
        background: #ffffff;
        border-color: #ffffff;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }
</style>

<main>
    <form method="post" action="/Account/Login" class="p-4 rounded shadow-sm" style="max-width: 400px; width: 100%;">
        <div class="text-center mb-4">
            <i class="fas fa-user-circle fa-3x text-primary"></i>
            <img class="d-block mx-auto mb-4" src="/Resource/logo2.png" alt="Logo" height="75">
        </div>

        <div class="form-group mb-3">
            <label for="AdminUser" class="form-label" style="margin-top:74px;">Username</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
                <input type="text" name="AdminUser" class="form-control" placeholder="AdminUser" required />
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="AdminPassword" class="form-label">Password</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                <input type="password" name="AdminPassword" class="form-control" placeholder="AdminPassword" required />
            </div>
        </div>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }
        <div class="d-grid">
            <button type="submit" class="btn btn-outline-dark text-white rounded-pill px-3 btn-margins" style="margin-top: 59px; border-width: 1px;">Log In</button>
        </div>
        <div class="text-center mt-3">
            <a href="/Account/Register" class="text-decoration-none">Don't have an account? Register</a>
        </div>
    </form>
</main>
