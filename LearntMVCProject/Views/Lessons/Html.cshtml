<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .shadow-box {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <div class="grid-background-lesson">
        <div class="content">
            <!-- Orijinal grid-background alanı burada kalıyor -->
        </div>
    </div>

    <!-- Yeni layout burada başlıyor, gridin üstünde ve dolu içerikli -->
    <div class="container position-absolute top-50 start-50 translate-middle">
        <div class="row">
            <div class="col-md-3">
                <div class="row mb-3">
                    <div class="col-12 p-5 rounded shadow-box bg-light border"></div>
                </div>
                <div class="row">
                    <div class="col-12 p-5 rounded shadow-box bg-light border gridcoteiner"></div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="p-5 rounded shadow-box bg-light border h-100"></div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>