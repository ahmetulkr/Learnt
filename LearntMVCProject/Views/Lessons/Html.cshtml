<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Python Lesson with Video and Compiler</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f9f9f9;
            font-family: Arial, sans-serif;
        }
        .containers {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }
        
       
        .video-section, .compiler-section {
            width: 100%;
            padding: 20px;
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        .video-section iframe, .compiler-section iframe {
            width: 80%;
            height: 500px;
            border: none;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }
        h2 {
            margin-bottom: 20px;
            color: #333;
        }
    </style>
</head>
<body>
    <div class="containers">
       <section class="">


       </section>
        <!-- Video List Section -->
        <div class="video-list-section">
            <div class="video-list d-flex">
            <a href="#" onclick="changeVideo('https://www.youtube.com/embed/rfscVS0vtbw')"></a>
                <img src="https://img.youtube.com/vi/rfscVS0vtbw/0.jpg" alt="Full Course" class="img-thumbnail border-0" style="background-color: #00000000;margin-left: 100px;">
            </a>
            <a href="#" onclick="changeVideo('https://www.youtube.com/embed/8DvywoWv6fI')">
                <img src="https://img.youtube.com/vi/8DvywoWv6fI/0.jpg" alt="For Beginners" class="img-thumbnail border-0" style="background-color: black;">
            </a>
            <a href="#" onclick="changeVideo('https://www.youtube.com/embed/WGJJIrtnfpk')">
                <img src="https://img.youtube.com/vi/WGJJIrtnfpk/0.jpg" alt="Advanced" class="img-thumbnail border-0" style="background-color: black;">
            </a>
            </div>
        </div>
        
        <!-- Video Section -->
        <div class="video-section">
            <h2>Lesson Video</h2>
            <iframe id="lesson-video" src="https://www.youtube.com/embed/rfscVS0vtbw" 
                title="YouTube video player" allow="accelerometer; autoplay; 
                clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
            </iframe>
        </div>
        
        <!-- Python Compiler Section -->
        <div class="compiler-section">
            <h2>Python Online Compiler</h2>
            <p>Edit and run Python code directly here:</p>
            <iframe height="500" scrolling="no" title="Python Compiler" 
                src="https://trinket.io/embed/python3" 
                allowtransparency="true" allowfullscreen="true">
            </iframe>
        </div>
    </div> 
    <script>
        function changeVideo(url) {
            document.getElementById('lesson-video').src = url;
        }
    </script>

    @if (Context.Session.GetInt32("UserId") == null)
    {
        <script>
            window.location.href = "/Home/Home";
        </script>
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
